<div class="row">
  <div class="col-lg-6 col-md-6 col-sm-12">
    <h1> Posts </h1>
    <table class="posts-table">
      <thead>
        <th> Title </th>
        <th> Author </th>
        <th> Published </th>
        <th> Last Updated </th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        <% @posts.each do |p| %>
          <tr>
            <td> <%= p.title %> </td>
            <td> <%= p.author %> </td>
            <td> <%= p.published %> </td>
            <td> <%= p.updated_at.strftime('%m/%d/%Y') %> </td>
            <td> <%= link_to "Edit", edit_admin_post_path(p) %> </td>
            <td> <%= link_to "Delete", admin_post_path(p), method: :delete, data: { confirm: 'Are you sure?' } %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @posts %>
  </div>

  <div class="col-lg-6 col-md-6 col-sm-12">
    <h1> New Post </h1>
    <%= render 'form' %>
  </div>



</div>
