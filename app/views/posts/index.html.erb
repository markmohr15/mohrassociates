<div class="row">
  <div class="col-md-12">
    <% @posts.each do |post| %>
      <div class="content">
        <h1> <%= post.title %> </h1>
        <div class="author-date">
          <span class="author"> By <%= post.author %> </span>  <span class="dateline"><span class="date"><%= post.updated_at.strftime('%B %e, %Y') %> </span> </span>
        </div>
        <div> <%= post.preview %> </div>
        <div class="read-more">
          <%= button_to "Read More", post_path(post.slug), class: "btn", method: :get %>
        </div>
      </div>
    <% end %>
    <%= will_paginate @posts %>
  </div>
</div>

