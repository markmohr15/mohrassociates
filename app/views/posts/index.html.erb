<div class="row">
  <div class="col-md-12">
    <% @posts.each do |post| %>
      <div class="content">
        <h2> <%= post.title %> </h2>
        <h5> By <%= post.author %> on <%= post.updated_at.strftime('%m/%d/%Y') %> </h5>
        <div> <%= post.preview %> </div>
        <%= button_to "Read More", post_path(post.slug), class: "btn", method: :get %>
      </div>
    <% end %>
    <%= will_paginate @posts %>
  </div>
</div>

